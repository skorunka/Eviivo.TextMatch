@using System.Globalization
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentUICulture.TwoLetterISOLanguageName">
<head>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>TextMatch</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
</head>
<body>
	<div class="container body-content">
		<div class="jumbotron">
			<h1>TextMatch</h1>
			<p class="lead">
				The application matches the subtext against the text, outputting the character positions of the beginning(indexed from one) of each match for the subtext within the text.
			</p>
			<p>
				<a href="https://github.com/skorunka/Eviivo.TextMatch" class="btn btn-primary btn-lg">See on GitHub</a>
			</p>
		</div>

		@RenderBody()

		<hr />
		<footer>
			<p>&copy; @DateTime.Now.Year</p>
		</footer>
	</div>

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryval")
	@Scripts.Render("~/bundles/bootstrap")
	@RenderSection("scripts", required: false)
</body>
</html>
